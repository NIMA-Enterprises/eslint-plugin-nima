{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "dist",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2019",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "verbatimModuleSyntax": true,
    "strict": true,
    "sourceMap": true
  }
}
