{
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",
    "target": "esnext",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "declaration": true,
    "outDir": "dist",
    "isolatedModules": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@/src/*": ["src/*"],
      "@utility/*": ["src/utility/*"],
      "@models/*": ["src/models/*"],
      "@rules/*": ["src/rules/*"],
      "@constants/*": ["src/constants/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
