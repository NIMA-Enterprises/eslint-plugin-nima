{
  "name": "eslint-plugin-nima",
  "version": "1.2.4",
  "description": "ESLint plugin for NIMA Labs",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "nima"
  ],
  "repository": "NIMA-Enterprises/eslint-plugin-nima",
  "author": "NIMA",
  "main": "dist/index.js",
  "files": [
    "/dist",
    "README.md"
  ],
  "type": "commonjs",
  "scripts": {
    "build": "jest && eslint . --fix && rm -rf dist && tsc --project tsconfig.build.json && tsc-alias",
    "check-types": "tsc --noEmit",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "test": "jest",
    "validate": "eslint . --fix && tsc --noEmit && echo 'You are a great developer!'"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^8.40.0",
    "minimatch": "^10.0.3"
  },
  "devDependencies": {
    "@eslint/core": "0.15.2",
    "@eslint/js": "9.32.0",
    "@types/jest": "30.0.0",
    "@types/node": "24.3.0",
    "@typescript-eslint/parser": "8.46.3",
    "@typescript-eslint/rule-tester": "8.46.3",
    "@typescript-eslint/typescript-estree": "8.46.3",
    "eslint-plugin-eslint-plugin": "^7.2.0",
    "eslint-plugin-perfectionist": "4.15.0",
    "eslint-plugin-unicorn": "62.0.0",
    "eslint-plugin-unused-imports": "4.2.0",
    "eslint-plugin-nima": "1.2.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "30.0.5",
    "jiti": "^2.5.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "typescript-eslint": "8.46.3"
  },
  "peerDependencies": {
    "eslint": "^9.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.15.1"
}
