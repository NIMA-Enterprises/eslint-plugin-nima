{
  "name": "eslint-plugin-nima",
  "version": "1.0.0",
  "description": "ESLint plugin for NIMA Labs",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "nima"
  ],
  "repository": "NIMA-Enterprises/eslint-plugin-nima",
  "author": "NIMA",
  "main": "dist/index.js",
  "files": [
    "/dist",
    "README.md"
  ],
  "type": "commonjs",
  "scripts": {
    "build": "jest && eslint . --fix && rm -rf dist && tsc --project tsconfig.build.json && tsc-alias",
    "check-types": "tsc --noEmit",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "test": "jest",
    "validate": "eslint . --fix && tsc --noEmit"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^8.40.0",
    "minimatch": "^10.0.3"
  },
  "devDependencies": {
    "@eslint/core": "^0.15.2",
    "@eslint/js": "^9.32.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/rule-tester": "^8.40.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jiti": "^2.5.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "peerDependencies": {
    "eslint": "^9.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "packageManager": "pnpm@8.9.0"
}
